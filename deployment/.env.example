# CloudFix Changelog Automation Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CREDENTIALS
# =============================================================================

# GitHub API (required)
# Generate at: https://github.com/settings/tokens
# Permissions needed: repo, read:org
GITHUB_API_KEY=ghp_your_github_token_here

# OpenAI API (required)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_key_here

# =============================================================================
# N8N CONFIGURATION
# =============================================================================

# n8n Basic Auth
N8N_USER=admin
N8N_PASSWORD=your_secure_password_here

# n8n Encryption Key (generate a random 32-character string)
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here

# n8n Host Configuration
N8N_HOST=your-domain.com
N8N_PROTOCOL=https
N8N_WEBHOOK_URL=https://your-domain.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# From Email Address
CLOUDFIX_FROM_EMAIL=changelog@cloudfix.com

# SMTP Settings (for n8n email sending)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key_here

# =============================================================================
# INTEGRATIONS
# =============================================================================

# Slack Notifications
# Create webhook at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Datadog Monitoring (optional)
DATADOG_API_URL=https://api.datadoghq.com
DATADOG_API_KEY=your_datadog_api_key_here

# Airtable for Subscriber Management
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_TABLE_ID=your_subscriber_table_id_here

# Notion for Changelog Archive (optional)
NOTION_API_KEY=your_notion_integration_token_here
NOTION_CHANGELOG_DB_ID=your_notion_database_id_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL for n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=n8n
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=your_postgres_password_here

# Redis for Caching
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# MONITORING (OPTIONAL)
# =============================================================================

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# =============================================================================
# SECURITY
# =============================================================================

# SSL Certificate paths (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/cloudfix.crt
SSL_KEY_PATH=/etc/ssl/private/cloudfix.key

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=production

# Logging
LOG_LEVEL=INFO

# Cache TTL (seconds)
CACHE_TTL=3600

# API Timeouts (seconds)
GITHUB_TIMEOUT=30
OPENAI_TIMEOUT=60

# =============================================================================
# CLOUDFIX SPECIFIC
# =============================================================================

# Default repository to monitor
DEFAULT_REPOSITORY=trilogy-group/cloudfix-aws

# Default branches to scan
DEFAULT_BRANCHES=production,main

# Email template customization
COMPANY_NAME=CloudFix
COMPANY_LOGO_URL=https://cloudfix.com/logo.png
SUPPORT_EMAIL=support@cloudfix.com
UNSUBSCRIBE_URL=https://cloudfix.com/unsubscribe

# Feature flags
ENABLE_NEWSLETTER_MODE=true
ENABLE_MONITORING=true
ENABLE_CACHING=true